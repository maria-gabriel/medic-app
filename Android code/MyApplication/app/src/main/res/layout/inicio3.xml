<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#484646">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="40dp"
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:text="Modo configuración"
            android:layout_gravity="center"
            android:enabled="false"
            android:typeface="monospace"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/pat"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#969595"
            android:text="Gestionar pacientes"
            android:onClick="Pacientes"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/doc"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#969595"
            android:text="Gestionar médicos"
            android:onClick="Doctores"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/cit"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#969595"
            android:text="Gestionar citas"
            android:onClick="Citas"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/fic"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#969595"
            android:text="Gestionar fichas"
            android:onClick="Fichas"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/rep"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#969595"
            android:text="Reportes"
            android:onClick="Reportes"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/back"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#969595"
            android:text="Salir"
            android:layout_gravity="center"
            android:onClick="Terminar"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>