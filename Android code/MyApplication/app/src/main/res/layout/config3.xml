<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Config3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:background="#969595"
            android:paddingLeft="-1dp"
            android:text="Reporte 1"
            android:onClick="Reporte1"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_marginLeft="105dp"
            android:background="#969595"
            android:paddingLeft="-1dp"
            android:text="Reporte 2"
            android:onClick="Reporte2"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button3"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_marginLeft="210dp"
            android:background="#969595"
            android:paddingLeft="-1dp"
            android:text="Reporte 3"
            android:onClick="Reporte3"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginLeft="315dp"
            android:background="#818080"
            android:paddingLeft="-1dp"
            android:text="Respaldo"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <Button
            android:id="@+id/button5"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:backgroundTint="#969595"
            android:text="Hacer respaldo de la base de datos"
            android:textColor="#FFFFFF"
            android:onClick="Respaldar"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/back3"
            android:layout_width="230dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#969595"
            android:text="Regresar"
            android:onClick="Admin"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>