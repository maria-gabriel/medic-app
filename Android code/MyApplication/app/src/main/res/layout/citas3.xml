<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Citas3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#09BAD9"
            android:paddingLeft="-1dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@drawable/color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:textSize="19dp"
                android:text="Cita:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Hora:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Fecha:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/ed3"
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Sintomas:"
                android:inputType="textMultiLine"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textSize="19dp"
                android:text="Estado:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed4"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text=""
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textSize="19dp"
                android:text="Médico:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed8"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Nombre:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/ed9"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Teléfono:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/ed10"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Correo:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <Button
                android:id="@+id/eli"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#09D9D9"
                android:text="Cancelar cita"
                android:onClick="Cancelacion"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="522dp"
            android:backgroundTint="#09BAD9"
            android:text="Atras"
            android:onClick="Regresar"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/call"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="341dp"
            android:layout_marginTop="336dp"
            android:background="@drawable/ico9"
            android:onClick="Llamar"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>