<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ficha0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/curp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="19dp"
            android:hint="CURP"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Mi ficha médica"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#09A8C4" />

        <Spinner
            android:id="@+id/sp3"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp">
        </Spinner>

        <Spinner
            android:id="@+id/sp4"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="150dp">
        </Spinner>

        <Spinner
            android:id="@+id/sp5"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="150dp">
        </Spinner>

        <Spinner
            android:id="@+id/sp6"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="243dp">
        </Spinner>

        <EditText
            android:id="@+id/naci"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="303dp"
            android:layout_marginLeft="220dp"
            android:textSize="19dp"
            android:hint="Nacionalidad"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name2"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="123dp"
            android:textSize="17dp"
            android:text="Fecha Nacimiento:"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:textSize="17dp"
            android:text="Datos generales:"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <Spinner
            android:id="@+id/sp"
            android:layout_width="190dp"
            android:layout_height="60dp">
        </Spinner>

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="190dp"
            android:layout_height="60dp">
        </Spinner>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:text="Familiar a cargo: (opcional)"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <EditText
            android:id="@+id/name"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:textSize="19dp"
            android:hint="Nombre"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <EditText
            android:id="@+id/paren"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:textSize="19dp"
            android:hint="Parentesco"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#566573" />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:backgroundTint="#09BAD9"
            android:text="  Guardar  "
            android:onClick="Guardar"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            tools:ignore="MissingConstraints"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:onClick="Continuar"/>


        <TextView
            android:id="@+id/salto"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:textSize="18dp"
            android:onClick="Saltar"
            android:text="Ya tengo una ficha en esta cuenta"
            android:ems="3"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:textColor="#08b6b6" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/tel"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="449dp"
            android:layout_marginLeft="210dp"
            android:textSize="19dp"
            android:hint="Teléfono"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textColor="#566573" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>