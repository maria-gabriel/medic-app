<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Citas6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="#e1e1e1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:backgroundTint="#09BAD9"
            android:layout_marginLeft="2dp"
            android:text="Cita"
            android:onClick="Cita"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginLeft="212dp"
            android:backgroundTint="#09BAD9"
            android:paddingLeft="-1dp"
            android:text="Paciente"
            android:onClick="Paciente"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@drawable/color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textSize="19dp"
                android:text="Cita:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed1"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Hora:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/ed2"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Fecha:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/texto5"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textSize="19dp"
                android:text="Estado de cita:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed6"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text=""
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="366dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textSize="19dp"
                android:text="Ubicación:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/ed7"
                android:layout_width="370dp"
                android:layout_height="66dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Referencias:"
                android:inputType="textMultiLine"
                android:textColor="#566573" />

            <Button
                android:id="@+id/eli"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#09BAD9"
                android:text="Finalizar cita"
                android:onClick="Finalizar"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/eli4"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#09BAD9"
                android:text="Ver ubicación"
                android:onClick="Ubicacion"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <Button
            android:id="@+id/back3"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="441dp"
            android:backgroundTint="#09D9D9"
            android:text="Cancelar cita"
            android:onClick="Cancelacion"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/back"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="521dp"
            android:backgroundTint="#09BAD9"
            android:text="Atras"
            android:onClick="Regresar"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:background="@drawable/color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto3"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textSize="19dp"
                android:text="Paciente:"
                android:layout_marginLeft="20dp"
                android:enabled="false"
                android:typeface="normal"
                android:textColor="#09BAD9" />

            <EditText
                android:id="@+id/d1"
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Nombre:"
                android:inputType="textMultiLine"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/d2"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Edad:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/d3"
                android:layout_width="370dp"
                android:layout_height="63dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Correo:"
                android:inputType="textMultiLine"
                android:textColor="#566573" />

            <EditText
                android:id="@+id/d4"
                android:layout_width="370dp"
                android:layout_height="55dp"
                android:layout_marginTop="-10dp"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:enabled="false"
                android:text="Contacto:"
                android:inputType="textPersonName"
                android:textColor="#566573" />

            <Button
                android:id="@+id/eli2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="#09BAD9"
                android:text="Agregar observaciones"
                android:onClick="Agregar"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/back2"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="#09BAD9"
                android:text="Atras"
                android:onClick="Regresar"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <Button
            android:id="@+id/call"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="343dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/ico9"
            android:onClick="Llamar"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"
        android:visibility="invisible"
        android:background="@drawable/color"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/back0"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="-3dp"
            android:backgroundTint="#09BAD9"
            android:text="Atras"
            android:onClick="Cita"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>