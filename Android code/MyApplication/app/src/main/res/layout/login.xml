<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon3"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="124dp">

        <EditText
            android:id="@+id/user"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ico1"
            android:textSize="18dp"
            android:ems="3"
            android:hint="Email user"
            android:typeface="monospace"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="#566573" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ico2"
            android:textSize="18dp"
            android:hint="Password"
            android:ems="3"
            android:typeface="monospace"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="#566573" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:typeface="monospace"
            android:visibility="invisible"
            android:textColor="#566573"
            android:text="Soy mÃ©dico" />

        <Button
            android:id="@+id/button"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="center"
            android:backgroundTint="#09BAD9"
            android:text="  Entrar  "
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:onClick="Entrar"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Regresar"
            android:onClick="Cancelar"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#09D9D9"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>